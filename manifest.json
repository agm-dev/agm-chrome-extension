{
  "name": "agm-chrome-extension",
  "version": "1.1",
  "description": "Custom scripts and features for Chrome and some specific websites",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "64": "icons/icon64.png"
    },
    "default_title": "agm-chrome-extension"
  },
  "options_page": "options/options.html",
  "content_scripts": [
    {
      "matches": ["*://elpais.com/*"],
      "js": ["content/elpais.js"]
    },
    {
      "matches": ["*://www.twitch.tv/*", "*://twitch.tv/*"],
      "js": ["content/twitch.js"]
    }
  ],
  "manifest_version": 2
}